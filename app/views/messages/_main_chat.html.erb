<div class="main_top">
  <div class="room_name">
    <%= @room.name %>
  </div>
  <div class="exit">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="main_main">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "main_bottom"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'text_form', placeholder: 'type a message' %>
    <label class="image_form">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send_form' %>
<% end %>